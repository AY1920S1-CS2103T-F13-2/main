@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model <<Rectangle>>{
Interface ReadOnlyMenu <<Interface>>
Interface Model <<Interface>>
Interface ObservableList <<Interface>>
Class Menu
Class ReadOnlyMenu
Class Model
Class ModelManager
Class UserPrefs
Class ReadOnlyUserPrefs
Class PurchaseHistory

Package Sorter {
Class CustomSorter
Class FoodComparator
}

Package Food {
Class Food
Class Description
Class Category
Class "Opening Hours"
Class Name
Class Price
Class UniqueFoodList
Class Restrictions
}

Package Savings {
Class SavingsAccount
}

Package Tag {
Class Tag
}
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

Menu .up.|> ReadOnlyMenu

ModelManager .up.|> Model
Model .right.> ObservableList
ModelManager o--> "1" Menu
ModelManager o--> "1" PurchaseHistory
ModelManager o--> "1" CustomSorter
ModelManager o--> "1" SavingsAccount
ModelManager o-left-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

CustomSorter *--> "1" FoodComparator

Menu *--> "1" UniqueFoodList
UniqueFoodList o--> "*" Food
Food *--> Name
Food *--> Price
Food *--> Description
Food *--> Category
Food *--> "Opening Hours"
Food *--> "*" Tag
Food *--> Restrictions

Name -[hidden]right-> Price
Price -[hidden]right-> Description
Description -[hidden]right-> Category

ModelManager -->"1" Food : filteredList
@enduml
