@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":SaveNusParser" as SaveNusParser LOGIC_COLOR
participant ":BuyCommandParser" as BuyCommandParser LOGIC_COLOR
participant ":BuyCommand" as BuyCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_LOGIC_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":PurchaseHistory" as PurchaseHistory MODEL_COLOR
end box

box Storage STORAGE_COLOR_T1
participant ":Storage" as Storage STORAGE_COLOR
participant ":JsonPurchaseHistoryStorage" as JsonPurchaseHistoryStorage STORAGE_COLOR
participant ":JsonSerializablePurchaseHistory" as JsonSerializablePurchaseHistory STORAGE_COLOR
participant ":JsonAdaptedPurchase" as JsonAdaptedPurchase STORAGE_COLOR
end box

[-> LogicManager : execute("buy 1")
activate LogicManager

LogicManager -> SaveNusParser : parseCommand("buy 1")
activate SaveNusParser

create BuyCommandParser
SaveNusParser -> BuyCommandParser
activate BuyCommandParser

BuyCommandParser --> SaveNusParser
deactivate BuyCommandParser

SaveNusParser -> BuyCommandParser : parse("1")
activate BuyCommandParser

create BuyCommand
BuyCommandParser -> BuyCommand
activate BuyCommand

BuyCommand --> BuyCommandParser :
deactivate BuyCommand

BuyCommandParser --> SaveNusParser :
deactivate BuyCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
BuyCommandParser -[hidden]-> SaveNusParser
destroy BuyCommandParser

SaveNusParser --> LogicManager :
deactivate SaveNusParser

LogicManager -> BuyCommand : execute()
activate BuyCommand

BuyCommand -> Model : addPurchase(Purchase purchase)
activate Model

Model --> BuyCommand
deactivate Model

create CommandResult
BuyCommand -> CommandResult
activate CommandResult

CommandResult --> BuyCommand
deactivate CommandResult

BuyCommand --> LogicManager : result
deactivate BuyCommand

[<--LogicManager
deactivate LogicManager

LogicManager -> Storage : savePurchaseHistory(model.getPurchaseHistory())
activate Storage

Storage -> JsonPurchaseHistoryStorage : savePurchaseHistory(ReadOnlyPurchaseHistory PurchaseHistory)
activate JsonPurchaseHistoryStorage

create JsonSerializablePurchaseHistory
JsonPurchaseHistoryStorage -> JsonSerializablePurchaseHistory
activate JsonSerializablePurchaseHistory

create JsonAdaptedPurchase
JsonSerializablePurchaseHistory -> JsonAdaptedPurchase
activate JsonAdaptedPurchase

JsonAdaptedPurchase --> JsonSerializablePurchaseHistory
deactivate JsonAdaptedPurchase

JsonSerializablePurchaseHistory --> JsonPurchaseHistoryStorage
deactivate JsonSerializablePurchaseHistory

JsonPurchaseHistoryStorage --> Storage
deactivate JsonPurchaseHistoryStorage

Storage --> LogicManager
deactivate Storage

[<--LogicManager
deactivate LogicManager

@enduml
